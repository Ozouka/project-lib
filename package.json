{
  "name": "shopify-iwci-boilerplace",
  "description": "Customizable modular development environment for blazing-fast Shopify theme creation",
  "author": "IWCI - Alexis Garcia",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "run-s vite:build",
    "dev": "run-p vite:serve shopify:serve",
    "fix": "run-s -c fix:*",
    "fix:css": "stylelint src/**/*.{css,sass,scss} --config .stylelintrc.json --fix",
    "fix:js": "eslint src/**/*.{ts,js} --config .eslintrc.json --fix",
    "fix:shopify": "shopify theme check -a",
    "format": "prettier --write 'src/**/*' 'templates/**/*' 'sections/**/*' 'layout/**/*' 'locales/**/*' 'snippets/**/*'",
    "lint": "run-s -c lint:*",
    "lint:css": "stylelint src/**/*.{css,sass,scss} --config .stylelintrc.json",
    "lint:js": "eslint src/**/*.{js,ts} --config .eslintrc.json",
    "lint:shopify": "shopify theme check",
    "pull": "run-s shopify:pull",
    "pull:dev": "shopify theme pull --development",
    "push": "run-s vite:build shopify:push",
    "share": "run-s vite:build && shopify theme share",
    "shopify:pull": "shopify theme pull",
    "shopify:push": "shopify theme push",
    "shopify:serve": "shopify theme dev --store=${STORE_URL}",
    "vite:build": "vite build",
    "vite:serve": "vite"
  },
  "devDependencies": {
    "@shopify/eslint-plugin": "^41.3.0",
    "@shopify/prettier-plugin-liquid": "^1.3.2",
    "@types/alpinejs": "^3.7.1",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "autoprefixer": "^10.4.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.2",
    "vite": "^4.4.11",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-shopify": "^2.1.1"
  },
  "dependencies": {
    "@shopify/cli": "^3.46.5",
    "@shopify/theme": "^3.46.5",
    "alpinejs": "^3.12.2",
    "embla-carousel": "^8.0.0-rc11",
    "embla-carousel-autoplay": "^8.0.0-rc11"
  },
  "engines": {
    "node": ">= 16.14.2"
  }
}
