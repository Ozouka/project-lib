{% comment %}
  Accepts:
  - variant: {String} :'alert' | 'approve' | 'arrow' | 'burger' | 'check' | 'chevron' | 'close' | 'copy' | 'delivery' | 'echantillons' | 'filter' | 'gift' | 'heart' | 'infos' | 'minus' | 'notification' | 'plus' | 'privilege' | 'profile' | 'search' | 'security' | 'shopping-bag' | 'verified' | 'facebook' | 'tiktok' | 'linkedin' | 'instagram' | 'youtube' | 'arrow-link'
  - svg_class: {String}
  - path_class: {String}
  - style: {String}

  Usage:
  {% render 'svg', variant: 'alert', svg_class: 'w-6 h-6', path_class: 'text-black' %}
{% endcomment %}

{% case variant %}
  {% when 'plus' %}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="{{ svg_class }}"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
    </svg>
  {% when 'minus' %}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="{{ svg_class }}"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6" />
    </svg>
  {% when 'arrow' %}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="12"
      viewBox="0 0 16 12"
      fill="none"
      class="size-4 {{ svg_class }}"
      style="{{ style }}"
    >
      <path d="M6.607 11L1 6M1 6L6.607 1M1 6L15 5.99997" stroke="currentColor" stroke-width="1.2" stroke-linecap="square"/>
    </svg>
  {% when 'search' %}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="size-6"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
    </svg>
{% endcase %}
